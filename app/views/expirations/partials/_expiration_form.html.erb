<div class="row">
  <div class="input-field col s12">
    <% vehicle_list = [*Vehicle.all.map { |v| [v.name, v.id] }] %>
    <%= 
      f.select(
        :vehicle_id,
        options_for_select(vehicle_list, @vehicle.present? ? [@vehicle.name, @vehicle.id] : nil),
        {},
        { disabled: @is_edit }
      ) 
    %>
    <%= f.label(:vehicle_id, 'Vehicle') %>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= f.select(
      :name,
      options_for_select(Expiration::NAMES),
      { required: true },
      { disabled: @is_edit }
    ) %>
    <%= f.label(:name, 'Name', class: @is_edit ? 'active' : '') %>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= f.text_field(:date, class: 'datepicker', required: true) %>
    <%= f.label(:date, 'Date') %>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('select').formSelect();
    $('.datepicker').datepicker();
  });
</script>
