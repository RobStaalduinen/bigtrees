<% active = false unless active.present? %>

<div class="row">
  <div class="input-field col s12">
    <%= form.text_field('name', required: true) %>
    <%= form.label(:name, 'Name', class: active ? 'active' : '') %>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.text_field('certification') %>
    <%= form.label(:certification, 'Certification', class: active ? 'active' : '') %>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.text_field('email', required: true) %>
    <%= form.label(:email, 'Email', class: active ? 'active' : '') %>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.text_field('phone_number') %>
    <%= form.label(:phone_number, 'Phone', class: active ? 'active' : '') %>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <%= form.number_field('hourly_rate') %>
    <%= form.label(:hourly_rate, 'Hourly Rate', class: active ? 'active' : '') %>
  </div>
</div>

<div class="row">
  <label>
    <%= hidden_field_tag 'arborist[can_manage_estimates]', 'false'%>
    <%= check_box_tag 'arborist[can_manage_estimates]', 'true', @arborist.can_manage_estimates? %>
    <span>Can Manage Estimates?</span>
  </label>

</div>
