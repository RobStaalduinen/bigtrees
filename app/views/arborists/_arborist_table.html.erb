<div id="arborist-table__container">
  
  <div class="flex-row-between">
    <h3>Arborists</h3>

    <%= link_to "/arborists/new", id: "arborist-table__add-link" do %>
      <h4>+ Add new</h4>
    <% end %>
  </div>

  <table id="arborist-table">
    <tr>
      <th id="arborist-table__row-entry">Name/Cert</th>
      <th id="arborist-table__row-entry">Contact</th>
    </tr>
    <% arborists.each do |arborist| %>
      <tr id="arborist-table__row">
        <td id="arborist-table__row-entry">
          <%= link_to arborist.name, edit_arborist_path(arborist.id) %>
          <br />
          <%= arborist.certification %>
        </td>
        <td id="arborist-table__row-entry">
          <%= arborist.phone_number %> <br />
          <%= arborist.email %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
