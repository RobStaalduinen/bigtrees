<div id='view-estimate__box'>
  <div id="view-estimate__costs-header">
    <span class = "text-large">Costs</span>
    
    <%= link_to edit_estimate_path(estimate, form_option: 'update_costs') do %>
      <span id="view-estimate__edit">Edit</span>
    <% end %>
  </div>

  <% estimate.trees.each_with_index do |tree, i| %>
    <div id='view-estimate__costs-row'>
      <div id="view-estimate__costs-label">
        <%= "Tree #{i + 1}" %>
      </div>
      <div id="view-estimate__costs-text">
        <%= tree.work_name %>
      </div>
      <div id="view-estimate__cost-value">
        $<%= tree.cost %>
      </div>
    </div>
  <% end %>

</div>
