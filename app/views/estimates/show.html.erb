<div class='page-container'>
  <h2>Estimate #<%= @estimate.id %><%= " - Stumping Only" if @estimate.stumping_only %></h2>
  <%= render 'estimates/show/timeline', estimate: @estimate %>

  <% if @estimate.arborist.present? %>
    <%= render 'estimates/show/quotes', estimate: @estimate %>
  <% end%>
  
  <%= render 'estimates/show/next', estimate: @estimate %>
  <%= render 'estimates/show/customer', customer: @estimate.customer, location: estimate_path(@estimate) %>
  <%= render 'estimates/show/basics', estimate: @estimate %>
  <% if @estimate.arborist.present? %>
    <%= render 'estimates/show/arborist', estimate: @estimate %>
  <% end %>

  <%= render 'estimates/show/costs', estimate: @estimate %>
  <%= render 'estimates/show/extra_costs', estimate: @estimate %>
  <%= render 'estimates/show/totals', estimate: @estimate %>

  <% if @estimate.invoice && @estimate.invoice.sent_at? %>
    <%= render 'estimates/show/invoice', invoice: @estimate.invoice %>
  <% end %>

  <%= render 'estimates/show/meeting', estimate: @estimate %>
  <%= render 'estimates/show/trees', estimate: @estimate %>
  <%= render 'estimates/show/cancel', estimate: @estimate %>
  

</div>
