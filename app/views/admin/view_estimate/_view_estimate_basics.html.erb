  <div id="view-estimate__box">
    <div id="view-estimate__main-header">
      <span class = "text-large">Contact</span>
      
      <%= link_to update_contact_details_estimate_path(estimate.id) do %>
        <span id="view-estimate__edit">Edit</span>
      <% end %>
    </div>

    <div id='view-estimate__row-vertical'>
      <div id="view_estimate__entry-header">
        Name
      </div>
      <div>
        <%= estimate.person_name %>
      </div>
    </div>

    <div id='view-estimate__row-vertical'>
      <div id="view_estimate__entry-header">
        Preferred Contact
      </div>
      <div>
        <%= estimate.preferred_contact_method %>
      </div>
    </div>


    <div id='view-estimate__row-vertical'>
      <div id="view_estimate__entry-header">
        Email
      </div>
      <div>
        <% if estimate.email.present? %>
          <a href="mailto:<%= estimate.email %>">
            <%= estimate.email %>
          </a>
        <% else %>
          -
        <% end %>
      </div>
    </div>

    <div id='view-estimate__row-vertical'>
      <div id="view_estimate__entry-header">
        Phone
      </div>
      <div>
        <% if estimate.phone.present? %>
          <a href="tel:<%= estimate.phone %>">
            <%= estimate.phone %>
          </a>
        <% else %>
          -
        <% end %>
      </div>
    </div>
  </div>


  

  <div id="view-estimate__box">
    <div id="view-estimate__main-header">
      <span class = "text-large">Address</span>
      
      <%= link_to update_address_estimate_path(estimate.id) do %>
        <span id="view-estimate__edit">Edit</span>
      <% end %>
    </div>
    <div id='view-estimate__row-vertical'>
      <div>
        <%= estimate.full_address %>
      </div>
    </div>
  </div>


  
  <div id="view-estimate__box">
    <span class="text-large" id="view-estimate__box-header">Site Info</span>

    <% unless estimate.stumping_only %>
      <div id='view-estimate__row'>

        <div id='view-estimate__row-entry'>
          <div id="view_estimate__entry-header">
            Vehicle Access
          </div>
          <div>
            <%= estimate.answer_for(:vehicle_access) %>
          </div>
        </div>

        <div id='view-estimate__row-entry'>
          <div id="view_estimate__entry-header">
            Breakables
          </div>
          <div>
            <%= estimate.answer_for(:breakables) %>
          </div>
        </div>
        
      </div>

      <div id='view-estimate__row'>

        <div id='view-estimate__row-entry'>
          <div id="view_estimate__entry-header">
            Wood Removal
          </div>
          <div>
            <%= estimate.answer_for(:wood_removal) %>
          </div>
        </div>

      </div>
    <% end %>

      <div id='view-estimate__row'>
        <div id='view-estimate__row-entry'>
          <div id="view_estimate__entry-header">
            Gate Width
          </div>
          <div>
            <% if estimate.should_display_access? %>
              <%= estimate.access_width %>
            <% else %>
              N/A
            <% end %>
          </div>
        </div>
      </div>

  </div>
