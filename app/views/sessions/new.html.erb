<div class="row">
  <span class="col s12 m6 offset-m3" id="login-welcome">
    Welcome! Please log in below.
  </span>
</div>

<div class="row">

<%= form_tag login_path, method: 'post', class: "col s12 m6 offset-m3" do %>
  <div class="row">
    <div class="input-field col s12">
      <%= text_field_tag 'email' %>
      <%= label_tag 'email', 'Email' %>
    </div>
  </div>

<% end %>

</div>
