<div class="row">
  <span class="col s12 m6 offset-m3" id="login-welcome">
    Big Tree Services Arborist Login
  </span>
</div>

<% if flash[:error] %>
  <div class='row'>
    <span class='error-message'><%= flash[:error] %></span>
  </div>
<% end %>

<div class="row">
<%= form_tag sessions_path, method: 'post', class: "col s12 m6 offset-m3" do %>
  <div class="row">
    <div class="input-field col s12">
      <%= text_field_tag 'email' %>
      <%= label_tag 'email', 'Email' %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= password_field_tag 'password' %>
      <%= label_tag 'password', 'Password' %>
    </div>
  </div>

  <div class="row">
    <%= submit_tag "Login", class: 'btn col s12 m6 offset-m3' %>
  </div>

<% end %>

</div>
